<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-title">
        <h4>Recent Leave Request </h4>
      </div>
      <div class="card-body">
        <% if (!userRept) { %>
          <br> <br>
          <h3 class="m-5 text-center mb-5">There is no leave available at the moment</h3>

          <% } else{%>
            <div class="table-responsive">
              <table class="table table-hover ">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Department</th>
                    <th>Reason</th>
                    <th>Duration (days)</th>
                    <th>Start Date</th>
                    <th>Approval</th>

                  </tr>
                </thead>
                <tbody>
                  Pending Leaves


                  <% userRept.forEach((report)=> { %>
                    <tr>
                      <td>
                        <%= report.name %>
                      </td>
                      <td>
                        <span class="badge badge-primary">Pending</span>
                      </td>
                      <td>
                        <%= report.department %>
                      </td>
                      <td>Sick Leave</td>
                      <td class="color-primary">
                        <%= report.duration %>
                      </td>
                      <td>
                        <%= report.start %>
                      </td>
                      <td><a class="btn btn-outline-success btn-sm">Approve</a>
                        <a class="btn btn-outline-danger ml-3 btn-sm">Decline</a>
                      </td>
                    </tr>
                    <% }); %>

                      <tr>
                        <td>Kolor Tea Shirt For Man</td>
                        <td>
                          <span class="badge badge-success">Approved</span>
                        </td>
                        <td>Human Resources</td>
                        <td>Sick Leave</td>
                        <td class="color-primary">7</td>
                        <td>January 22</td>
                        <td><button class="btn btn-outline-success btn-sm">Approve</button>
                          <button class="btn btn-outline-danger ml-3 btn-sm">Decline</button>
                        </td>
                      </tr>

                </tbody>
              </table>
            </div>
          <% } %>
      </div>
    </div>
  </div>