<section id="main-content"><title>|| <%= report.date %> - <%= report.title %></title>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <h1 class="text-centre">Report Title : <%= report.title %>  <a href="/add/report/<%= report.report_id %>" class="btn btn-outline-primary p-3 m-4">Add</a></h1>
                <div class="bootstrap-data-table-panel"> 
                    <div class="table-responsive">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <% let count=1; %>
                                    <tr>
                                        <%= report.date %> || <%= report.time %>
                                    </tr>
                                    <tr>
                                        <th>S/N</th>
                                        <th>Action</th>
                                        <th>Outcome</th>
                                        <th>Task Status</th>

                                    </tr>
                            </thead>
                            <tbody>
                                <% oneRept.forEach((rept)=> { %>
                                    <tr>
                                        <th scope="row">
                                            <%= count++ %>
                                        </th>
                                        <td>
                                            <%= rept.action %>
                                        </td>
                                        <td>
                                            <% if (rept.outcome) { %>
                                                <% rept.outcome.split('\n').forEach(function(line) { %>
                                                    <% if (line.trim()) { %>
                                                        <p> <%= line %></p>
                                                    <% } %>
                                                <% }); %>
                                            <% } %>
                                            
        
                                        </td>
                                        <td class="color-primary">
                                            <%= rept.status %>
                                        </td>
                                        <td>
                                            <a href="/del/content/<%= rept.id %>" class="btn btn-outline-danger btn-sm">Remove</a>
                                        </td>
                                    </tr>
                                    <% }); %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /# card -->
        </div>
        <!-- /# column -->
    </div>
    <!-- /# row -->
</section>