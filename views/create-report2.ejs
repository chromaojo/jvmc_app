<h2 class="text-capitalize">Report by <%= oneRept[0].name %> 
    <a href="/dashboard/<%= userData.user_id %>" class="btn btn-outline-primary ml-4">Done</a> <a href="/del/report/<%= oneRept.report_id %>"
        class="btn btn-outline-danger text-end ml-4">Delete This Report</a>

</h2>
<div class="card">
    <div class="card-title"> 
        <h4>Updating : <%= title %> ..
       </h4>
        
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover ">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>Action</th>
                        <th>Outcome</th>
                        <th>Task Status</th>
                        <th>Add</th>
                        <% let count=1; %>
                    </tr>
                </thead>
                <tbody>
                    <form action="/add/rep" method="POST">
                        <tr class="p-2">
                            <th scope="row">#</th>
                            <input type="text" value="<%= id %>" hidden name="report_id">
                            <td>
                                <div class="mb-3">
                                    <textarea name="action" placeholder="Enter Actions Taken"
                                        class="form-control h-100" rows="4" required></textarea>
                                </div>
                            </td>
                            <td>
                                <div class="mb-3">
                                    <textarea name="outcome" placeholder="Outcome or Results"
                                        class="form-control h-100" rows="4" required></textarea>
                                </div>
                            </td>
                            <td>
                                <div class="mb-3">
                                    <select id="department" name="status" class="form-control mb-3 p-2 m-2"
                                        required>
                                        <option value="Status Not Stated">Choose Status</option>
                                        <hr>
                                        <option value="Cancelled">Cancelled</option>
                                        <option value="Completed">Completed</option>
                                        <option value="Deferred">Deferred</option>
                                        <option value="In Progress">In Progress</option>
                                        <option value="Not Started">Not Started</option>
                                        <option value="On Hold">On Hold</option>
                                        
                                        
                                        
                                    </select>
                                </div>
                            </td>
                            <td class="color-success">
                                <button class="btn btn-primary" type="submit">Add Content</button>
                            </td>
                        </tr>
                    </form> <hr>
                    <% oneRept.forEach((rept)=> { %>
                        <tr>
                            <th scope="row">
                                <%= count++ %>
                            </th>
                            <td>
                                <%= rept.action %>
                            </td>
                            <td>
                                <% if (rept.outcome) { %>
                                    <% rept.outcome.split('\n').forEach(function(line) { %>
                                        <% if (line.trim()) { %>
                                            <p><%= line %></p>
                                        <% } %>
                                    <% }); %>
                                <% } %>
                                

                            </td>
                            <td class="color-primary">
                                <%= rept.status %>
                            </td>
                            <td><span class="badge badge-primary p-2">Added</span>
                            </td>
                            <td>
                                <a href="/del/content/<%= rept.id %>" class="btn btn-outline-danger btn-sm">Remove</a>
                            </td>
                        </tr>
                        <% }); %>
                            <br>

                </tbody>
            </table> <br> <br>
        </div>
    </div>

    
</div>