<section id="main-content"><title>|| Task Tracker - <%= task.title %></title>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <h1 class="text-center"><b>Task Title :</b> <%= task.title %></h1>
                <% if (userData.user_id == task.user_id) { %>
                    <a href="/staff/track/Task/<%= task.task_id %>" class="btn btn-outline-primary p-3 m-4">Edit</a>
                    <% } %>
                <div class="bootstrap-data-table-panel"> 
                    <div class="table-responsive">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <% let count=1; %>
                                    <tr> 
                                        <%= task.date %> || <%= task.time %>
                                        <b class="ml-4">By <%= task.name %></b>
                                    </tr>
                                    <tr>
                                        <th>#</th>
                                        <th>Task</th>
                                        <th>Objective</th>
                                        <th>Target</th>
                                        <th>Timeline</th>
                                        <th>Expectations</th>
                                        <th>Acchievement</th>
                                        <th>Remark</th>        
                                    </tr>
                            </thead>
                            <tbody>
                                <% oneRept.forEach((rept)=> { %>
                                    <tr>
                                        <th scope="row">
                                            <%= count++ %>
                                        </th>
                                        <td>
                                            <%= rept.task %>
                                        </td>
                                        <td>
                                            <% if (rept.objective) { %>
                                                <% rept.objective.split('\n').forEach(function(line) { %>
                                                    <% if (line.trim()) { %>
                                                        <p> <%= line %></p>
                                                    <% } %>
                                                <% }); %>
                                            <% } %>
                                            
        
                                        </td>
                                        <td class="color-primary text-capitalize ">
                                           
                                            <% if (rept.target) { %>
                                                <% rept.target.split('\n').forEach(function(line) { %>
                                                    <% if (line.trim()) { %>
                                                        <p> <%= line %></p>
                                                    <% } %>
                                                <% }); %>
                                            <% } %>
                                        </td>
                                        <td class="color-primary text-capitalize ">
                                           
                                            <% if (rept.timeline) { %>
                                                <% rept.timeline.split('\n').forEach(function(line) { %>
                                                    <% if (line.trim()) { %>
                                                        <p> <%= line %></p>
                                                    <% } %>
                                                <% }); %>
                                            <% } %>
                                        </td>
                                        <td class="color-primary text-capitalize ">
                                           
                                            <% if (rept.expectations) { %>
                                                <% rept.expectations.split('\n').forEach(function(line) { %>
                                                    <% if (line.trim()) { %>
                                                        <p> <%= line %></p>
                                                    <% } %>
                                                <% }); %>
                                            <% } %>
                                        </td>
                                        <td class="color-primary text-capitalize ">
                                           
                                            <% if (rept.remark) { %>
                                                <% rept.remark.split('\n').forEach(function(line) { %>
                                                    <% if (line.trim()) { %>
                                                        <p> <%= line %></p>
                                                    <% } %>
                                                <% }); %>
                                            <% } %>
                                        </td>
                                        <td class="color-primary text-capitalize ">
                                           
                                            <% if (rept.achievement) { %>
                                                <% rept.achievement.split('\n').forEach(function(line) { %>
                                                    <% if (line.trim()) { %>
                                                        <p> <%= line %></p>
                                                    <% } %>
                                                <% }); %>
                                            <% } %>
                                        </td>
                                        
                                    </tr>
                                    <% }); %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /# card -->
        </div>
        <!-- /# column -->
    </div>
    <!-- /# row -->
</section>